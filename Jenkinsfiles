pipeline{
    agent {Label 'master'}
    tool{maven 'M3'}
    stages{
        stage{'Checkout'}{
            stage{
                git branch: 'main' , url: 'https://github.com/AnjuMeleth/SpringPetClinic.git'
            }
        }
        stage{'Build'}{
            steps{
                sh 'mvn compile'
            }
        }
        stage{'Test'}{
            steps{
                sh 'mvn test'
            }
        }
        stage{'Package'}{
            steps{
                sh 'mvn package'
            }
            
        }
        Stage{'Deploy'}{
            steps{
                sh 'java - jar /var/lib/jenkins/workspace/PetClinicDeclarativePipeline/target/*.jar'
            }
        }
    }
}
